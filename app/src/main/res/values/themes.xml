<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.WaterMyPlants" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="Theme.WaterMyPlants.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@raw/plantexampleanimation</item>
        <item name="windowSplashScreenAnimationDuration">3000</item>
        <item name="postSplashScreenTheme">@style/Theme.WaterMyPlants</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/black</item>
        <item name="postSplashScreenTheme">@style/Theme.WaterMyPlants</item>
        <item name="windowSplashScreenAnimatedIcon">@raw/plantexampleanimation</item>
    </style>

    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="android:statusBarColor">@color/white</item>
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@color/white</item>
        <item name="windowSplashScreenAnimationDuration">0000</item>
        <item name="postSplashScreenTheme">@style/Theme.WaterMyPlants</item>
    </style>

</resources>